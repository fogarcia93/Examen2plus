<p id="notice"><%= notice %></p>

<h1>Contactos</h1>
<div class="parallax-container">
<div class="parallax"><img src="pa1.png"></div>

<table class="highlight">
  <thead>
    <tr>
      <th>Creador</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Imagen</th>
      <th>Telefono</th>
      <th>Opciones de Control</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contactos.each do |contacto| %>
      <tr>
      	<td>
       	<% if Contact.find_by_id(contacto.contact_id) %>
       	<%= contacto.contact.email %>
       	<% end %>
        </td>
        
        <td><%= contacto.name %></td>
        <td><%= contacto.email %></td>
        <td>
          <img src="<%= contacto.imagen %>" width="100"/>
        </td>
        <td><%= contacto.phone %></td>
        <td>
	<a href= "/contactos/<%= contacto.id%>"class="waves-effect waves-light btn">Mostrar</a>
	</td>
        <td>
	<a href= "/contactos/<%= contacto.id%>/edit"class="waves-effect waves-light btn">Editar</a>
	</td>
        <td>
	<a data-method="delete" href =/contactos/<%= contacto.id %> data-confirm="Seguro?" class="waves-effect waves-light btn">Eliminar</a>	
	</td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>
</div>
  

<a href="/contactos/new"class="waves-effect waves-light btn">Nuevo Contacto</a>
